<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Create a New Shnax</h1>
            <a href="/shnax"><i style="font-size: 2rem; outline: none;" class="far fa-hand-point-left"></i></a>
            <form class="mx-5 md-5 mt-3" action="/shnax" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" aria-label="Title" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" aria-label="Image URL" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" aria-label="Large" name="desc" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>



<%- include('../partials/footer') %>