<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Edit the "<%= shnax.name %>" Post</h1>
            <a href="/shnax/<%= shnax._id %>"><i style="font-size: 2rem; outline: none;"
                    class="far fa-hand-point-left"></i></a>
            <form class="mx-5 md-5 mt-3" action="/shnax/<%= shnax._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" aria-label="name" name="shnax[name]"
                        value="<%= shnax.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" aria-label="image" name="shnax[image]"
                        value="<%= shnax.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" aria-label="Large" name="shnax[desc]"
                        value="<%= shnax.desc %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>



<%- include('../partials/footer') %>