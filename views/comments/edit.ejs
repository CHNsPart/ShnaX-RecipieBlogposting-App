<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Edit The Comment</h1>
            <a href="/shnax/<%= shnax_id %>"><i style="font-size: 2rem; outline: none;"
                    class="far fa-hand-point-left"></i></a>
            <form class="mx-5 md-5 mt-3" action="/shnax/<%= shnax_id %>/comments/<%= comment._id %>?_method=PUT"
                method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" aria-label="Comment" name="comment[text]"
                        value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>



<%- include('../partials/footer') %>